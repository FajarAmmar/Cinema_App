.sidebar-admin{
     margin: 2em 0 2em 3px;
}

.navbar-user {
     background-color: $primary;
     height: 5em;
     box-shadow: rgba(0, 0, 0, 0.1) 0px 20px 25px -5px, rgba(0, 0, 0, 0.04) 0px 10px 10px -5px;
     padding: 0;
     margin: 0;
}

.bg-homepage{
     min-width: 100%;
     height: 28em;
     & > img {
     min-width: 100%;
     }
}

.carousel-container{
     background-color: transparent;
     display: flex;
     flex-wrap: nowrap;
     padding: 0em 2em;
     margin-top: 10px;
     overflow-x: auto;
     scroll-behavior: smooth;
     overflow-y:hidden;
           /* Clear search button (overrides load more button stying) */
     & > ul {
          margin: 0 0 $spacing-medium;
          display: flex; 
          .mx-listview-empty {
               border-style: none;
               background-color: transparent;
               }
 
           }
           & > li {
             margin: 0;
             padding: 0;
           }
 }

 .slide-img{
     height: 25em;
     width: 15em;
     margin: 1em 5px;
     
     & > img {
          min-height: 100%;
          cursor: pointer;
     }
     & > img:hover {
          background-color: grey;
     }
 }

 .topbar-content{
     margin: 0 2em;
 }

 .navbar-menu {
     background-color: transparent;
 }

 